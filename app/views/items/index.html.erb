<p id="notice"><%= notice %></p>
<h1>Kirkland Jail Inventory</h1>
<h2>Listing Items</h2>
<%= link_to 'New Item', new_item_path %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th>Name</th>
      <th>Count</th>
      <th>Minimum</th>
      <th>Need to order?</th>
      <th>Last Order</th>
      <th>Location Stored</th>
      <th>Bob Barker Stock #</th>
      <th>Last Check</th>
    </tr>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.count %></td>
        <td><%= item.minimum %></td>
        <td><%= item.need %></td>
        <td><%= item.last_order.to_s(:jail_time) %></td>
        <td><%= item.location %></td>
        <td><%= item.bob_barker_id %></td>
        <td><%= item.last_check.to_s(:jail_time) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


